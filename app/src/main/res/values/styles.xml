<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WeekButtonOn"
        parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/ic_button_repeat_circle_on</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="WeekButtonOff"
        parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/ic_button_repeat_circle_off</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
