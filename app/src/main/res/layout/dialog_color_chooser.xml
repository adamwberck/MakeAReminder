<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">
    <TextView
        android:id="@+id/snooze_time_text_2"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--<TextView
        android:text="@string/set_snooze"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:scrollbars="none"
            android:id="@+id/snooze_scrollview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/color_buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button style="@style/SquareButtonColor" />
                    <Button
                        style="@style/SquareButtonColor"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        style="@style/SquareButtonColor"
                         />
                    <Button
                        style="@style/SquareButtonColor"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        style="@style/SquareButtonColor"
                         />
                    <Button
                        style="@style/SquareButtonColor"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        style="@style/SquareButtonColor"
                         />
                    <Button
                        style="@style/SquareButtonColor"
                         />
                </LinearLayout>
                <LinearLayout
                android:layout_margin="2dp"
                    android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    style="@style/SquareButtonColor"
                     />
                <Button
                    style="@style/SquareButtonColor"
                     />
                </LinearLayout>
                <LinearLayout
                android:layout_margin="2dp"
                    android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    style="@style/SquareButtonColor"
                     />
                <Button
                    style="@style/SquareButtonColor"
                     />
            </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel_dialog_button"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/change_color_button"
            android:text="@string/change_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>