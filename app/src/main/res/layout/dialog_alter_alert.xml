<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp">
        <TextView
            android:text="@string/alert_type"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="start"/>
        <Spinner
            android:id="@+id/alert_type_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6">
        </Spinner>
        <ImageView
            android:src="@drawable/ic_alarm"
            android:id="@+id/alert_type_icon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">
    <TextView
        android:id="@+id/reminder_time_spinner"
        android:text="@string/sound"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="start"/>
    <Spinner
        android:id="@+id/alert_sound_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6">
    </Spinner>
    <ImageButton
        android:src="@drawable/ic_play_sound"
        android:background="#00000000"
        android:id="@+id/sound_test_button"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">
        <TextView
            android:text="@string/volume"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/volume_slider"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/vibrate_icon"
            android:background="#00000000"
            android:src="@drawable/ic_vibrate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/vibrate_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>
