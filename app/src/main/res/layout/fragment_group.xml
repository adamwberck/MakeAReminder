<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="16dp">
    <TextView
        android:id="@+id/name_label"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/group_name_label"
        android:labelFor="@+id/group_name"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/group_name"
            android:layout_width="0dp"
            android:textSize="40sp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/group_color_square"
                android:background="#00000000"
                android:src="@drawable/ic_button_square_color"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <Button
        android:id="@+id/time_button"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_time"/>
    <Button
        android:id="@+id/repeat_button"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_repeat" />
    <Button
        android:textSize="22sp"
        android:id="@+id/snooze_button"
        android:text="@string/default_snooze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="22sp"
        android:text="@string/default_reminders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/reminder_list_view"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </ListView>
</LinearLayout>