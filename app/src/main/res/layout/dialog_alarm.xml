<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">
    <TextView
        android:id="@+id/snooze_time_text"
        android:gravity="center_horizontal"
        android:text="@string/time_default"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/snooze_time_text_2"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--<TextView
        android:text="@string/set_snooze"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:scrollbars="none"
            android:id="@+id/snooze_scrollview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/color_buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button style="@style/SquareButton" />
                    <Button
                        style="@style/SquareButton"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        style="@style/SquareButton"
                         />
                    <Button
                        style="@style/SquareButton"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        style="@style/SquareButton"
                         />
                    <Button
                        style="@style/SquareButton"
                         />
                </LinearLayout>
                <View
                    android:layout_width="3dp"
                    android:layout_height="fill_parent"
                    android:background="@color/mixedBlue" />
                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        style="@style/SquareButton2"
                         />
                    <Button
                        style="@style/SquareButton2"
                         />
                </LinearLayout>
                <LinearLayout
                android:layout_margin="2dp"
                    android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    style="@style/SquareButton2"
                     />
                <Button
                    style="@style/SquareButton2"
                     />
                </LinearLayout>
                <LinearLayout
                android:layout_margin="2dp"
                    android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    style="@style/SquareButton2"
                     />
                <Button
                    style="@style/SquareButton2"
                     />
            </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/undo_button"
                android:src="@drawable/ic_undo"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                style="@style/SquareButton3"/>
            <ImageButton
                android:id="@+id/reset_button"
                android:src="@drawable/ic_reset"
                android:layout_gravity="center_horizontal"
                style="@style/SquareButton3"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/alarm_left_button"
            android:text="@string/snooze"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/alarm_right_button"
            android:text="@string/mark_complete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>